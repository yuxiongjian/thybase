<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="topbar_bg">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/top_bar_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">46.0dip</item>
    </style>

    <style name="topbar_text">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDy">-2.0</item>
        <item name="android:shadowRadius">4.0</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="topbar_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="topbar_left_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="topbar_right_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="StatusBarBackground">
        <item name="android:background">@drawable/bitmap_repeat</item>
    </style>

    <style name="XTheme" parent="android:Theme">

        <!-- Window attributes -->
        <item name="android:windowTitleBackgroundStyle">@style/StatusBarBackground </item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
    </style>

    <style name="yut">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tablehead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center|fill</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="tablehead2">

        <!--
        item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item
        -->
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/headgray</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="RowHeadStyle">
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@color/textbkcolor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center|fill</item>
    </style>

    <style name="tabletextstyle">
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center|fill</item>
    </style>

    <style name="tabletextcenter">
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center|fill</item>
    </style>

    <style name="tabletextright">
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">12sp</item>
        <!-- item name="android:textStyle">bold</item -->
        <item name="android:layout_gravity">center|fill</item>
    </style>

    <style name="listtextstyle">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center|fill</item>
    </style>

    <style name="Translucent_notitle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--
             Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used.
        -->

        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="btn_default">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">30dp</item>
        <!-- thy-learn default will be 48 for buttons -->
        <item name="android:background">@drawable/button_style1</item>
    </style>

</resources>